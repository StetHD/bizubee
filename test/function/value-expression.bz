
test("Coerce If-statement", (api) -> {
	const a = 3
	const b = $ if a ^ 2 == 9 do
		|< 33
	else
		|< 67

	const c = 9
	const d = $ if c ^ 2 == 9 do
		|< 33
	else
		|< 67

	api.eq(b, 33)
	api.eq(d, 67)
	api.done()
})

test("Coerce Try-statement", (api) -> {
	const a = $ try
		throw new Error("hobo")
		|< 8 + 8
	catch {message}
		|< 5 ^ 2


	api.eq(a, 25)
	api.done()
})

test("Coerce Block-statement", (api) -> {
	const a = $ do
		var a = 4 ^ 2
		2 * a >|


	api.eq(a, 32)
	api.done()
})